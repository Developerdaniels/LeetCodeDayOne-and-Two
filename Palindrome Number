public class Solution {
    public bool IsPalindrome(int x) {
        if(x == 0){
            return true;
        }
        if(x < 0){
            return false;
        }
        string a=x.ToString();
        var b = "";
        
        for(int i = a.Length - 1; i >= 0; i--){

            b += a[i];   
           
        }
        
        if(a == b){
          return true;}
        
        else{
          return false;
    }
        
}
}
